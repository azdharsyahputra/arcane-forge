{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["react", "react-dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
